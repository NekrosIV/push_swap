NAME = push_swap
LIBFTNAME = libft.a
CC = cc
CFLAGS = -g3
LIBFTDIR = ./libft

SRCS = ./src/push_swap.c ./src/swap.c ./src/push.c ./src/rotate.c ./src/rrotate.c ./src/ft_itoa_nosigne.c ./src/lst_utils.c ./src/lst_utils2.c \
		./src/algo.c ./src/free.c ./src/parsing.c
OBJS = $(SRCS:.c=.o)

HEADERS = ./include/push_swap.h

